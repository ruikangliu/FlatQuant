+def repeated_run(num_repeats=10):
+    def func(module):
+        def _f(*args, **kwargs):
+            times = []
+            for i in range(num_repeats):
+                times.append(module(*args, **kwargs, repeat_idx = i))
+            return tuple(zip(*times))
+        return _f
+    return func
+
+def _cleanup():
+    gc.collect()
+    torch.cuda.empty_cache()

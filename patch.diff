+                 .replace("ln_trans.matrix_left", "left_matrix") \
+                 .replace("ln_trans.matrix_right", "right_matrix") \
+                 .replace("ln_trans", "inp_trans_k") \
+                 .replace("o_trans.matrix", "o_proj_trans.right_matrix") \
